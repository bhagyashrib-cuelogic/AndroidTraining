<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="boxDesign">
        <item name="android:background">@drawable/border</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_30dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">@dimen/size_0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:text">@string/student_portal</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/textSize_15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tableStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_30dp</item>
        <item name="android:layout_marginRight">@dimen/margin_30dp</item>
        <item name="android:layout_below">@+id/text_labelName</item>
        <item name="android:layout_marginTop">@dimen/margin_30dp</item>
    </style>

</resources>
